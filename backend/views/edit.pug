extends layout
block content 
    form(id='form' method='post' action=('/edit/' + user._id))
        label(for='username') Username: 
        input(type='text' name='userName' value=user.userName)
        br
        br
        label(for='age') Age: 
        input(type='text' name='age' value=user.age)
        br
        br
        label(for='question1') Do you prefer creamy or crunchy peanut butter?(#{user.securityQuestion1})
        br
        input(type="radio" id="question1" name="question1" value="crunchy peanut butter")
        label(for='question1') Crunchy
        br
        input(type='radio' id='question1' name='question1' value='creamy peanut butter')
        label(for='question1') Creamy
        br
        br
        label(for='qeustion2') Do you prefer apple or android?(#{user.securityQuestion2})
        br
        input(type='radio' id='question2' name='question2' value='apple')
        label(for='question2') Apple
        br
        input(type='radio' id='question2' name='question2' value='android')
        label(for='question2') Android
        br
        br
        label(for='question3') Best Movie Series?
        select(name='question3')
            option(selected=user.securityQuestion3) #{user.securityQuestion3}
            option(value='Star Wars') Star Wars
            option(value='Star Trek') Star Trek
            option(value='Harry Potter') Harry Potter
            option(value='Lord of the Rings') Lord of the Rings
        br
        br
        input(type='submit' value='Update Person')